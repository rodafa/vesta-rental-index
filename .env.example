# =============================================================================
# Django
# =============================================================================
DJANGO_SECRET_KEY=change-me-to-a-random-50-char-string
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_CSRF_TRUSTED_ORIGINS=https://your-app.up.railway.app

# =============================================================================
# Database â€” Railway provides DATABASE_URL automatically.
# The POSTGRES_* vars below are only used by docker-compose (local dev).
# =============================================================================
DATABASE_URL=postgresql://user:password@host:5432/vesta_rental_index
POSTGRES_DB=vesta_rental_index
POSTGRES_USER=vesta
POSTGRES_PASSWORD=your_db_password

# =============================================================================
# Vesta Internal API Auth
# When set, all /api/ endpoints require X-API-Key header.
# Leave blank for local dev (auth disabled).
# =============================================================================
VESTA_API_KEY=

# =============================================================================
# RentVine
# =============================================================================
RENTVINE_SUBDOMAIN=vestapm
RENTVINE_API_KEY=your_rentvine_api_key
RENTVINE_API_SECRET=your_rentvine_api_secret

# =============================================================================
# RentEngine
# =============================================================================
RENTENGINE_BASE_URL=https://app.rentengine.io/api/public/v1
RENTENGINE_API_TOKEN=your_rentengine_token

# =============================================================================
# BoomPay / BoomScreen
# =============================================================================
BOOMPAY_BASE_URL=https://screen.boompay.app/api/v1
BOOMPAY_API_KEY=your_boompay_api_key
BOOMPAY_API_SECRET=your_boompay_api_secret

# =============================================================================
# Future integrations (placeholders)
# =============================================================================
SENDGRID_API_KEY=your_key
SLACK_WEBHOOK_URL=your_url
